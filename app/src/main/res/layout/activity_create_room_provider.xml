<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".providerScreens.CreateRoomProvider">

    <TextView
        android:id="@+id/create_room"
        android:text="Create Room"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewImage"
        android:text="Image: "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/create_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_Image"
        android:lines="1"
        android:layout_marginBottom="-4dp"
        app:layout_constraintLeft_toRightOf="@id/textViewImage"
        app:layout_constraintBottom_toBottomOf="@id/textViewImage"
        android:layout_width="300dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/textViewLocation"
        android:text="Location: "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_Location"
        android:lines="1"
        android:layout_marginBottom="-4dp"
        app:layout_constraintLeft_toRightOf="@id/textViewLocation"
        app:layout_constraintBottom_toBottomOf="@id/textViewLocation"
        android:layout_width="272dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/textViewAddress"
        android:text="Address: "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_Address"
        android:lines="2"
        android:maxLines="2"
        android:layout_marginBottom="-4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewPrice"
        android:text="Price: "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_Price"
        android:lines="1"
        android:inputType="number"
        android:layout_marginBottom="-4dp"
        app:layout_constraintLeft_toRightOf="@id/textViewPrice"
        app:layout_constraintBottom_toBottomOf="@id/textViewPrice"
        android:layout_width="310dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/textViewShortDescription"
        android:text="Short Description: "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_ShortDescription"
        android:lines="2"
        android:maxLines="2"
        android:layout_marginBottom="-4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewShortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:text="Description: "
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_ShortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_Description"
        android:lines="4"
        android:maxLines="4"
        android:layout_marginBottom="-4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Tao"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:text="Tạo"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Huy"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:text="Huỷ"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>