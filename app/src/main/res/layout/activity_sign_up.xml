<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".screens.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/house_background"
        />

    <TextView
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:background="@color/white"
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Welcom To"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@color/drak_orange"
        android:paddingStart="7dp"
        android:paddingEnd="8dp"
        android:background="@color/white"
        android:id="@+id/reantal_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Rental App"
        android:layout_below="@+id/welcome"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:background="@drawable/layout_bg"
        android:layout_marginTop="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="38dp"
                    android:layout_marginEnd="16dp"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:text="Sign Up" />

                <TextView
                    android:id="@+id/sign_up_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_margin="16dp"
                    android:hint="Name"
                    android:textColorHint="@color/black"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/user_email"
                    android:layout_margin="16dp"
                    android:hint="Email"
                    android:textColorHint="@color/black"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/user_password"
                    android:layout_margin="16dp"
                    android:hint="Password"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/black"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/user_confirm_password"
                    android:layout_margin="16dp"
                    android:hint="Confirm Password"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/black"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/user_role"
                    android:layout_margin="16dp"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/black"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sign_up_button"
                    android:padding="16dp"
                    android:layout_margin="16dp"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:background="@drawable/button_bg"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/have_account"
                    android:layout_margin="16dp"
                    android:text="Already have account? Sign In"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</RelativeLayout>